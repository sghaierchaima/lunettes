<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#FFF"
    android:elevation="4dp"
    android:layout_margin="8dp"
    tools:context=".lunettes_item">

    <!-- Image de la fleur -->
    <ImageView
        android:id="@+id/lunettes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/lunettes"
        android:layout_marginEnd="8dp" />

    <!-- Infos de la fleur -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lunettes_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de la fleur"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lunettes_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CatÃ©gorie:"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/lunettes_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/lunettes_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix : 0.00 TND"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Boutons Modifier/Supprimer -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Bouton Modifier -->
        <ImageView
            android:id="@+id/icone_edit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/edit"
            android:layout_marginBottom="12dp"
            android:contentDescription="Modifier" />

        <!-- Bouton Supprimer -->
        <ImageView
            android:id="@+id/icone_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/delete"
            android:contentDescription="Supprimer" />
    </LinearLayout>
</LinearLayout>
